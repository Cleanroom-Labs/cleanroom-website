{
  "name": "cleanroom-website",
  "version": "1.0.0",
  "description": "Documentation aggregation platform using nested git submodules to manage technical documentation for multiple projects with version-coupled releases.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "next dev --webpack",
    "dev:clean": "npm run build-docs:clean && next dev --webpack",
    "build": "npm run build-docs && next build --webpack",
    "build:web": "next build --webpack",
    "postbuild": "next-sitemap",
    "build-docs": "node scripts/build-docs.mjs",
    "build-docs:clean": "node scripts/build-docs.mjs --clean",
    "start": "next start",
    "lint": "node scripts/lint.mjs",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test -- --run && npm run test:e2e"
  },
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=9.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "gray-matter": "^4.0.3",
    "next": "^16.1.6",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "jsdom": "^27.4.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vitest": "^4.0.18"
  }
}
